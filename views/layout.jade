doctype 5
html(lang="en")
  head
    title= pageTitle
    link(rel='shortcut icon' href='/static/img/favicon.ico')
    link(rel='stylesheet' type='text/css' href='/static/css/main.css')
    script(type='text/javascript', src='/static/js/analytics.js')

  body(id=bodyID)

    #header
      img#imageHeader(src='/static/img/header.jpg')
      a#blogTitle(href='/') Kamil Jozwiak's Blog
      a#twitter(href='https://twitter.com/kamiljozwiak', target='_blank')
        img(src='/static/img/twitter-icon.png')
      a#github(href='https://github.com/kjozwiak/', target='_blank')
        img(src='/static/img/github-icon.png')
      a#mozilla(href='https://bugzilla.mozilla.org/user_profile?login=kamiljoz%40gmail.com', target='_blank')
        img(src='/static/img/firefox-icon.png')

    block mainContent
