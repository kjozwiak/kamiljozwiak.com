doctype 5
html(lang="en")
  head
    title= pageTitle
    link(rel='shortcut icon' href='/static/img/favicon.ico')
    link(rel='stylesheet' type='text/css' href='/static/css/main.css')
    link(rel='stylesheet' href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css')
    script(type='text/javascript', src='/static/js/analytics.js')

    block contentHeader

  body(id=bodyID)
    #headercontainer
      #header
        img#imageheader(src='/static/img/header.jpg')
        a#logo(href='/') Kamil Jozwiak's Blog
        ul#socialnav
          li: a(href='https://twitter.com/kamiljozwiak', target='_blank')
            i(class='fa fa-twitter-square fa-inverse fa-2x')
          li: a(href='https://github.com/kjozwiak/', target='_blank')
            i(class='fa fa-github-square fa-inverse fa-2x')
          li: a(href='http://ca.linkedin.com/pub/kamil-jozwiak/16/140/207/', target='_blank')
            i(class='fa fa-linkedin-square fa-inverse fa-2x')
          li: a(href='https://bugzilla.mozilla.org/user_profile?login=kamiljoz%40gmail.com', target='_blank')
            i(class='fa fa-bug fa-inverse fa-2x')
          li: a(href='/feed/rss', target='_blank')
            i(class='fa fa-rss fa-inverse fa-2x')

      #navmenu
        ul
          li: a(href='/'): span Home
          li: a(href='/resume'): span Resume
          li: a(href='/projects'): span Projects
          li: a(href='/reading'): span Reading List
          li: a(href='/links'): span Links
          li: a(href='/about'): span About
          li: a(href="/contact"): span Contact

      #mainContentArea
        #content
          block mainContent

      #footer
        ul.navigationbottom
          li: a(href='/') Home
          li: a(href='/resume') Resume
          li: a(href='/projects') Projects
          li: a(href='/reading') Reading List
          li: a(href='/links') Links
          li: a(href='/about') About
          li: a(href='/contact') Contact
        ul.bottomcontent
          li: &copy; Copyright Kamil Jozwiak
